<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<fragment>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="com.astra.ses.spell.gui.perspective">
         <view
               closeable="false"
               id="com.astra.ses.spell.gui.views.CallstackView"
               minimized="false"
               moveable="true"
               ratio="0.4"
               relationship="bottom"
               relative="com.astra.ses.spell.gui.views.NavigationView"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            category="com.astra.ses.spell.gui.views.execution"
            class="com.astra.ses.spell.gui.views.CallstackView"
            icon="icons/16x16/plugin.png"
            id="com.astra.ses.spell.gui.views.CallstackView"
            name="Call Stack">
      </view>
   </extension>

</fragment>
