<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<fragment>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="com.astra.ses.spell.gui.perspective">
         <view
               closeable="false"
               id="com.astra.ses.spell.gui.views.OutlineView"
               minimized="false"
               moveable="true"
               relationship="stack"
               relative="com.astra.ses.spell.gui.views.CallstackView"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="com.astra.ses.spell.gui.views.execution"
            class="com.astra.ses.spell.gui.views.OutlineView"
            allowMultiple="false"
            icon="icons/16x16/book_open.png"
            id="com.astra.ses.spell.gui.views.OutlineView"
            name="Outline">
      </view>
   </extension>

</fragment>
