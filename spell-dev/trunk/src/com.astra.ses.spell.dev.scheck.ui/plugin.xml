<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="com.astra.ses.spell.dev.scheck.ui.commands.category.semantics"
            name="Semantics">
      </category>
      <command
            categoryId="com.astra.ses.spell.dev.scheck.ui.commands.category.semantics"
            description="Perform semantics check"
            id="com.astra.ses.spell.dev.scheck.ui.commands.PerformCheck"
            name="Perform check">
      </command>
      <command
            categoryId="com.astra.ses.spell.dev.scheck.ui.commands.category.semantics"
            id="com.astra.ses.spell.dev.scheck.ui.commands.CleanCheck"
            name="Clean check results">
      </command>
      <command
            categoryId="com.astra.ses.spell.dev.scheck.ui.commands.category.semantics"
            description="Generate semantics check report"
            id="com.astra.ses.spell.dev.scheck.ui.commands.GenerateReport"
            name="Generate report">
      </command>
      <command
            categoryId="com.astra.ses.spell.dev.scheck.ui.commands.category.semantics"
            description="Re-process the user library files for known projects"
            id="com.astra.ses.spell.dev.scheck.ui.commands.ReparseUL"
            name="Process user libraries">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.astra.ses.spell.dev.scheck.ui.handlers.PerformCheckCommand"
            commandId="com.astra.ses.spell.dev.scheck.ui.commands.PerformCheck">
         <enabledWhen>
            <reference
                  definitionId="com.astra.ses.spell.dev.scheck.ui.ValidSelected">
            </reference>
         </enabledWhen>
      </handler>
      <handler
            class="com.astra.ses.spell.dev.scheck.ui.handlers.CleanCheckCommand"
            commandId="com.astra.ses.spell.dev.scheck.ui.commands.CleanCheck">
         <enabledWhen>
            <reference
                  definitionId="com.astra.ses.spell.dev.scheck.ui.ValidSelected">
            </reference>
         </enabledWhen>
      </handler>
      <handler
            class="com.astra.ses.spell.dev.scheck.ui.handlers.GenerateReportCommand"
            commandId="com.astra.ses.spell.dev.scheck.ui.commands.GenerateReport">
         <enabledWhen>
            <reference
                  definitionId="com.astra.ses.spell.dev.scheck.ui.ValidSelected">
            </reference>
         </enabledWhen>
      </handler>
      <handler
            class="com.astra.ses.spell.dev.scheck.ui.handlers.ReparseUserLibCommand"
            commandId="com.astra.ses.spell.dev.scheck.ui.commands.ReparseUL">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="com.astra.ses.spell.dev.scheck.ui.commands.PerformCheck"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
      <key
            commandId="com.astra.ses.spell.dev.scheck.ui.commands.CleanCheck"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+7">
      </key>
      <key
            commandId="com.astra.ses.spell.dev.scheck.ui.commands.ReparseUL"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+8">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="com.astra.ses.spell.dev.scheck.ui.menus.semanticsMenu"
               label="Semantics"
               mnemonic="M">
            <command
                  commandId="com.astra.ses.spell.dev.scheck.ui.commands.PerformCheck"
                  icon="icons/check.png"
                  id="com.astra.ses.spell.dev.scheck.ui.menus.performCheck"
                  mnemonic="S"
                  style="push">
            </command>
            <command
                  commandId="com.astra.ses.spell.dev.scheck.ui.commands.GenerateReport"
                  icon="icons/report.png"
                  id="com.astra.ses.spell.dev.scheck.ui.menus.generateReport"
                  mnemonic="S"
                  style="push">
            </command>
            <command
                  commandId="com.astra.ses.spell.dev.scheck.ui.commands.CleanCheck"
                  icon="icons/clean.png"
                  id="com.astra.ses.spell.dev.scheck.ui.menus.cleanCheck"
                  mnemonic="C">
            </command>
            <command
                  commandId="com.astra.ses.spell.dev.scheck.ui.commands.ReparseUL"
                  icon="icons/arrow_redo.png"
                  id="com.astra.ses.spell.dev.scheck.ui.menus.reparseUL"
                  mnemonic="U">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="com.astra.ses.spell.dev.scheck.ui.toolbars.semanticsCheck">
            <command
                  commandId="com.astra.ses.spell.dev.scheck.ui.commands.PerformCheck"
                  icon="icons/check.png"
                  id="com.astra.ses.spell.dev.scheck.ui.toolbars.performCheck"
                  tooltip="Trigger the semantic check">
            </command>
            <command
                  commandId="com.astra.ses.spell.dev.scheck.ui.commands.GenerateReport"
                  icon="icons/report.png"
                  id="com.astra.ses.spell.dev.scheck.ui.toolbars.generateReports"
                  tooltip="Generate reports for checked files">
            </command>
            <command
                  commandId="com.astra.ses.spell.dev.scheck.ui.commands.CleanCheck"
                  icon="icons/clean.png"
                  id="com.astra.ses.spell.dev.scheck.ui.toolbars.cleanCheck"
                  tooltip="Clean the semantic check results">
            </command>
            <command
                  commandId="com.astra.ses.spell.dev.scheck.ui.commands.ReparseUL"
                  icon="icons/arrow_redo.png"
                  id="com.astra.ses.spell.dev.scheck.ui.toolbars.reparseUL"
                  tooltip="Re-parse user library files">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="com.astra.ses.spell.dev.scheck.ui.properties.CheckableTester"
            id="com.astra.ses.spell.dev.scheck.properties.CheckableTester"
            namespace="com.astra.ses.spell.dev.scheck.ui"
            properties="checkable"
            type="java.lang.Object">
      </propertyTester>
   </extension>
   <extension
         id="com.astra.ses.spell.dev.scheck.ui.Information"
         name="Semantics information"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <super
            type="org.eclipse.core.resources.textmarker">
      </super>
   </extension>
   <extension
         id="com.astra.ses.spell.dev.scheck.ui.Warning"
         name="Semantics warning"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <super
            type="org.eclipse.core.resources.textmarker">
      </super>
   </extension>
   <extension
         id="com.astra.ses.spell.dev.scheck.ui.Error"
         name="Semantics error"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <super
            type="org.eclipse.core.resources.textmarker">
      </super>
   </extension>
   <extension
         point="org.eclipse.ui.editors.annotationTypes">
      <type
            markerType="com.astra.ses.spell.dev.scheck.ui.Information"
            name="com.astra.ses.spell.dev.scheck.InformationMarkerAnnotation"
            super="org.eclipse.ui.workbench.texteditor.info">
      </type>
      <type
            markerType="com.astra.ses.spell.dev.scheck.ui.Warning"
            name="com.astra.ses.spell.dev.scheck.WarningMarkerAnnotation"
            super="org.eclipse.ui.workbench.texteditor.info">
      </type>
      <type
            markerType="com.astra.ses.spell.dev.scheck.ui.Error"
            name="com.astra.ses.spell.dev.scheck.ErrorMarkerAnnotation"
            super="org.eclipse.ui.workbench.texteditor.info">
      </type>
   </extension>
   <extension
         point="org.eclipse.ui.editors.markerAnnotationSpecification">
      <specification
            annotationType="com.astra.ses.spell.dev.scheck.InformationMarkerAnnotation"
            colorPreferenceKey="scheck.information.IndicationColor"
            colorPreferenceValue="150,30,190"
            highlightPreferenceKey="scheck.information.Highlighting"
            highlightPreferenceValue="false"
            icon="icons/recommend.png"
            includeOnPreferencePage="true"
            isGoToNextNavigationTargetKey="scheck.information.isRecordGoToNextNavigationTarget"
            isGoToPreviousNavigationTargetKey="scheck.information.isGoToPreviousNavigationTarget"
            label="Information Issue Marker"
            overviewRulerPreferenceKey="scheck.information.IndicationInOverviewRuler"
            overviewRulerPreferenceValue="true"
            presentationLayer="3"
            showInNextPrevDropdownToolbarAction="false"
            showInNextPrevDropdownToolbarActionKey="scheck.information.showInNextPrevDropdownToolbarAction"
            textPreferenceKey="scheck.information.Indication"
            textPreferenceValue="true"
            textStylePreferenceKey="scheck.information.StyleKey"
            textStylePreferenceValue="SQUIGGLES"
            verticalRulerPreferenceKey="scheck.information.IndicationInVerticalRuler"
            verticalRulerPreferenceValue="true">
      </specification>
      <specification
            annotationType="com.astra.ses.spell.dev.scheck.WarningMarkerAnnotation"
            colorPreferenceKey="scheck.warning.IndicationColor"
            colorPreferenceValue="250,220,90"
            highlightPreferenceKey="scheck.warning.Highlighting"
            highlightPreferenceValue="false"
            icon="icons/warning.png"
            includeOnPreferencePage="true"
            isGoToNextNavigationTargetKey="scheck.warning.isRecordGoToNextNavigationTarget"
            isGoToPreviousNavigationTargetKey="scheck.warning.isGoToPreviousNavigationTarget"
            label="Warning Issue Marker"
            overviewRulerPreferenceKey="scheck.warning.IndicationInOverviewRuler"
            overviewRulerPreferenceValue="true"
            presentationLayer="3"
            showInNextPrevDropdownToolbarAction="false"
            showInNextPrevDropdownToolbarActionKey="scheck.warning.showInNextPrevDropdownToolbarAction"
            textPreferenceKey="scheck.warning.Indication"
            textPreferenceValue="true"
            textStylePreferenceKey="scheck.warning.StyleKey"
            textStylePreferenceValue="SQUIGGLES"
            verticalRulerPreferenceKey="scheck.warning.IndicationInVerticalRuler"
            verticalRulerPreferenceValue="true">
      </specification>
      <specification
            annotationType="com.astra.ses.spell.dev.scheck.ErrorMarkerAnnotation"
            colorPreferenceKey="scheck.error.IndicationColor"
            colorPreferenceValue="255,30,30"
            highlightPreferenceKey="scheck.error.Highlighting"
            highlightPreferenceValue="false"
            icon="icons/error.png"
            includeOnPreferencePage="true"
            isGoToNextNavigationTargetKey="scheck.error.isRecordGoToNextNavigationTarget"
            isGoToPreviousNavigationTargetKey="scheck.error.isGoToPreviousNavigationTarget"
            label="Error Issue Marker"
            overviewRulerPreferenceKey="scheck.error.IndicationInOverviewRuler"
            overviewRulerPreferenceValue="true"
            presentationLayer="3"
            showInNextPrevDropdownToolbarAction="false"
            showInNextPrevDropdownToolbarActionKey="scheck.error.showInNextPrevDropdownToolbarAction"
            textPreferenceKey="scheck.error.Indication"
            textPreferenceValue="true"
            textStylePreferenceKey="scheck.error.StyleKey"
            textStylePreferenceValue="SQUIGGLES"
            verticalRulerPreferenceKey="scheck.error.IndicationInVerticalRuler"
            verticalRulerPreferenceValue="true">
      </specification>
   </extension>
   <extension
         point="org.eclipse.ui.ide.markerSupport">
      <markerTypeCategory
            name="Semantics Check">
         <markerTypeReference
               id="com.astra.ses.spell.dev.scheck.ui.Error">
         </markerTypeReference>
         <markerTypeReference
               id="com.astra.ses.spell.dev.scheck.ui.Information">
         </markerTypeReference>
         <markerTypeReference
               id="com.astra.ses.spell.dev.scheck.ui.Warning">
         </markerTypeReference>
      </markerTypeCategory>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="com.astra.ses.spell.dev.scheck.ui.ValidSelected">
         <with
               variable="selection">
            <or>
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <instanceof
                        value="org.eclipse.core.resources.IResource">
                  </instanceof>
               </iterate>
               <test
                     forcePluginActivation="true"
                     property="com.astra.ses.spell.dev.scheck.ui.checkable">
               </test>
            </or>
         </with>
      </definition>
   </extension>
   <extension
         point="org.eclipse.ui.decorators">
      <decorator
            adaptable="true"
            icon="icons/sc_decorator.png"
            id="com.astra.ses.spell.dev.scheck.ui.decorator"
            label="Semantic Check Decorator"
            lightweight="true"
            location="TOP_LEFT"
            state="true">
         <enablement>
            <and>
               <objectClass
                     name="org.eclipse.core.resources.IFile">
               </objectClass>
               <objectState
                     name="sessionProperty"
                     value="semantics-check-issues">
               </objectState>
            </and>
         </enablement>
      </decorator>
   </extension>

</plugin>
