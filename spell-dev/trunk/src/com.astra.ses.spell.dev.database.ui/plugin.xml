<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            category="com.astra.ses.spell.dev.views"
            class="com.astra.ses.spell.database.browser.views.TelemetryView"
            icon="icons/img_telemetry.png"
            id="com.astra.ses.spell.dev.views.database.TelemetryViewPart"
            name="Telemetry"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            category="com.astra.ses.spell.dev.views"
            class="com.astra.ses.spell.database.browser.views.TelecommandView"
            icon="icons/img_command.png"
            id="com.astra.ses.spell.dev.views.database.TelecommandViewPart"
            name="Telecommand"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            description="Change Database Command"
            id="com.astra.ses.spell.database.database.ui.handlers.changeDatabase"
            name="Change Database Action">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=Edit">
         <menu
               id="com.astra.ses.spell.database.workspace.menu.procedures"
               label="Project"
               mnemonic="Project">
            <command
                  commandId="com.astra.ses.spell.database.database.ui.handlers.changeDatabase"
                  icon="icons/img_database.png"
                  id="Change Database"
                  label="Change database properties"
                  mnemonic="Change Database"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.astra.ses.spell.database.db.ui.handlers.ChangeDatabaseHandler"
            commandId="com.astra.ses.spell.database.database.ui.handlers.changeDatabase"
            helpContextId="Change Database Command">
         <enabledWhen>
            <test
                  forcePluginActivation="true"
                  property="com.astra.ses.spell.database.database.hasDatabase"
                  value="true"></test>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            class="com.astra.ses.spell.database.db.ui.properties.pages.ProjectDatabasePropertiesPage"
            icon="icons/img_database.png"
            id="com.astra.ses.spell.database.db.ui.property.pages"
            name="Database Properties">
         <enabledWhen>
            <and>
               <instanceof
                     value="org.eclipse.core.resources.IProject">
               </instanceof>
               <test
                     args="com.astra.ses.spell.dev.SpellNature"
                     property="org.eclipse.core.resources.projectNature"
                     value="com.astra.ses.spell.dev.SpellNature">
               </test>
               <test
                     property="org.eclipse.core.resources.open"
                     value="true">
               </test>
            </and>
         </enabledWhen>
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="com.astra.ses.spell.dev.perspective.development">
          <view
                id="com.astra.ses.spell.dev.views.database.TelemetryViewPart"
                ratio="0.50"
                relationship="bottom"
                relative="com.astra.ses.spell.dev.views.explorer"
                showTitle="true"
                visible="true">
         </view>
          <view
                id="com.astra.ses.spell.dev.views.database.TelecommandViewPart"
                relationship="stack"
                relative="com.astra.ses.spell.dev.views.database.TelemetryViewPart"
                showTitle="true"
                visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="com.astra.ses.spell.database.db.propertytester.HasDatabaseProperty"
            id="com.astra.ses.spell.database.database.hasDatabase"
            namespace="com.astra.ses.spell.database.database"
            properties="hasDatabase"
            type="java.lang.Object">
      </propertyTester>
   </extension>
</plugin>
